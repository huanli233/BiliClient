<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="rippleColor" tools:ignore="PrivateResource">@color/mtrl_btn_ripple_color</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">#cc262626</item>
        <item name="cardCornerRadius">@dimen/card_round</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#cc262626</item>
        <item name="cornerRadius">@dimen/card_round</item>
        <item name="android:textColor">@color/textwhite</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#80ffffff</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:textColor">@color/textwhite</item>
    </style>

    <style name="SwitchCompatStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:background">@drawable/background_edittext_setting</item>
        <item name="android:textColor">@color/textwhite</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:minHeight">10dp</item>
    </style>

    <style name="ListStyle">
        <item name="android:descendantFocusability">afterDescendants</item>
    </style>

    <style name="Theme.BiliClient.Splash" parent="Theme.BiliClient">
        <item name="android:windowBackground">@drawable/splash_text</item>
    </style>
</resources>
