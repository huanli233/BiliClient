        <activity
            android:name=".activity.settings.SettingUIActivity"
            android:exported="true"
            android:label="界面设置"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.settings.SettingAboutActivity"
            android:exported="true"
            android:label="关于"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.settings.SettingMainActivity"
            android:exported="true"
            android:label="设置"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.video.SearchActivity"
            android:exported="true"
            android:label="搜索"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.video.info.VideoInfoActivity"
            android:exported="true"
            android:label="视频详情"
            android:screenOrientation="portrait" />
        <activity
